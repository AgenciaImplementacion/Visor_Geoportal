<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Geoportal</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <!--
  Alternatively, all JSP-pages of the webapp would need to have the following at the top of them 
  <%@page pageEncoding="UTF-8" contentType="text/html; charset=UTF-8"%>
   -->
  <jsp-config>
    <jsp-property-group>
        <url-pattern>*.jsp</url-pattern>
        <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
</jsp-config>

  <!-- Listeners -->
  
  <listener>
    <listener-class>it.gesp.geoportal.listeners.AppStartListener</listener-class>
  </listener>
  
  <!-- Filters -->
  
  <filter>
    <filter-name>CharsetFilter</filter-name>
    <filter-class>it.gesp.geoportal.filters.CharsetFilter</filter-class>
      <init-param>
        <param-name>requestEncoding</param-name>
        <param-value>UTF-8</param-value>
      </init-param>
  </filter>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>main</servlet-name>
    <servlet-class>it.gesp.geoportal.servlets.Main</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>admin</servlet-name>
    <servlet-class>it.gesp.geoportal.servlets.Admin</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>it.gesp.geoportal.servlets.Login</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>redlining</servlet-name>
    <servlet-class>it.gesp.geoportal.servlets.RedliningServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>comments</servlet-name>
    <servlet-class>it.gesp.geoportal.servlets.CommentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>alerts</servlet-name>
    <servlet-class>it.gesp.geoportal.servlets.AlertServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SITMunicipalAlerts</servlet-name>
    <servlet-class>it.gesp.geoportal.servlets.SITMunicipalAlertServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>roles</servlet-name>
    <servlet-class>it.gesp.geoportal.servlets.RoleServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>users</servlet-name>
    <servlet-class>it.gesp.geoportal.servlets.UserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>systemConfig</servlet-name>
    <servlet-class>it.gesp.geoportal.servlets.SystemConfigServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>mapConfig</servlet-name>
    <servlet-class>it.gesp.geoportal.servlets.MapConfigServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>layerConfig</servlet-name>
    <servlet-class>it.gesp.geoportal.servlets.LayerConfigServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>generalData</servlet-name>
    <servlet-class>it.gesp.geoportal.servlets.GeneralDataServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>test</servlet-name>
    <servlet-class>it.gesp.geoportal.servlets.TestServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>downloadservlet</servlet-name>
    <servlet-class>it.gesp.geoportal.servlets.DownloadServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>pdfservlet</servlet-name>
    <servlet-class>it.gesp.geoportal.servlets.PdfServlet</servlet-class>
  </servlet>
  
  <!-- Servlet mappings -->
  
  <servlet-mapping>
    <servlet-name>main</servlet-name>
    <url-pattern>/main</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>admin</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>redlining</servlet-name>
    <url-pattern>/redlining</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>comments</servlet-name>
    <url-pattern>/comments</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>alerts</servlet-name>
    <url-pattern>/alerts</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SITMunicipalAlerts</servlet-name>
    <url-pattern>/SITMunicipalAlerts</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>roles</servlet-name>
    <url-pattern>/roles</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>users</servlet-name>
    <url-pattern>/users</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>systemConfig</servlet-name>
    <url-pattern>/systemConfig</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>mapConfig</servlet-name>
    <url-pattern>/mapConfig</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>layerConfig</servlet-name>
    <url-pattern>/layerConfig</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>generalData</servlet-name>
    <url-pattern>/generalData</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>downloadservlet</servlet-name>
    <url-pattern>/download</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>pdfservlet</servlet-name>
    <url-pattern>/pdfservlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>test</servlet-name>
    <url-pattern>/test</url-pattern>
  </servlet-mapping>
  
  <!-- Filter mappings -->
  <filter-mapping>
    <filter-name>CharsetFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <resource-ref>
  	<description>This is a MySQL database connection</description>
  	<res-ref-name>jdbc/GEOPORTAL_POSTGIS_DS</res-ref-name>
  	<res-type>javax.sql.DataSource</res-type>
  	<res-auth>Container</res-auth>
</resource-ref>

</web-app>